{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ArquiteturaDeVagas.API: Launch",
            "type": "coreclr",                  // Tipo correto para .NET
            "request": "launch",                 // Iniciar a aplicação
            "preLaunchTask": "build",            // Tarefa a ser executada antes de iniciar (compilar)
            "program": "${workspaceFolder}/ArquiteturaDeVagas.API/bin/Debug/net9.0/ArquiteturaDeVagas.API.dll", // Caminho para o executável (verifique se 'net9.0' está correto)
            "args": [],
            "cwd": "${workspaceFolder}/ArquiteturaDeVagas.API", // Diretório de trabalho
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https|http)://\\S+:([0-9]+)",
                "uriFormat": "%s/openapi/v1.json"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development" // Ambiente de desenvolvimento
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}